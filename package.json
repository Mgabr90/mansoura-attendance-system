{
  "name": "mansoura-attendance-system",
  "version": "2.0.0",
  "private": true,
  "description": "Modern, modular attendance management system with Telegram integration",
  "keywords": ["attendance", "telegram", "nextjs", "typescript", "modular", "prisma"],
  "author": "El Mansoura CIH",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup.js",
    "setup:reset": "node scripts/setup.js --reset",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "npm run setup",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "node e2e-test.js",
    "test:modular": "node e2e-modular-test.js",
    "clean": "rm -rf .next out dist build",
    "clean:all": "npm run clean && rm -rf node_modules",
    "analyze": "ANALYZE=true npm run build",
    "export": "next export",
    "check:modules": "node -e \"console.log('🔍 Checking modular architecture...'); require('./src/index.ts'); console.log('✅ All modules loaded successfully')\"",
    "health:check": "node -e \"console.log('🏥 Running health check...'); const { HealthMonitor } = require('./src/lib/health-monitor'); new HealthMonitor().checkHealth().then(r => console.log('✅ Health check passed:', r))\""
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.4",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "15.0.0",
    "node-cron": "^4.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.47.0",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0",
    "telegraf": "^4.16.3",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.8",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.0.0",
    "postcss": "^8.0.0",
    "prisma": "^5.7.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.4.0",
    "typescript": "^5.0.0"
  }
}
