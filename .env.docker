# Docker Environment Template for Mansoura CIH Telegram Attendance System
# Copy this file to .env and fill in your actual values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_DB=mansoura_attendance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DB_PORT=5432

# Full database URL (will be auto-constructed in docker-compose)
# DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/mansoura_attendance

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
PORT=3000
APP_PORT=3000

# External ports
HTTP_PORT=80
HTTPS_PORT=443

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_very_long_random_nextauth_secret_here_min_32_chars

# ==============================================
# TELEGRAM BOT CONFIGURATION
# ==============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/bot/webhook
TELEGRAM_BOT_USERNAME=your_bot_username

# ==============================================
# OFFICE LOCATION (El Mansoura CIH)
# ==============================================
OFFICE_LATITUDE=31.0417
OFFICE_LONGITUDE=31.3778
OFFICE_RADIUS=100
OFFICE_ADDRESS=29R3+7Q El Mansoura 1

# ==============================================
# WORK HOURS CONFIGURATION
# ==============================================
DEFAULT_WORK_START=09:00
DEFAULT_WORK_END=17:00

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=your_very_secure_jwt_secret_here_min_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ==============================================
# NOTIFICATION SETTINGS
# ==============================================
DAILY_REPORT_TIME=20:00
ENABLE_NOTIFICATIONS=true

# ==============================================
# ADMIN SETTINGS
# ==============================================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password_here

# ==============================================
# PRODUCTION DOMAIN CONFIGURATION
# ==============================================
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# ==============================================
# MONITORING CONFIGURATION (Production)
# ==============================================
GRAFANA_PASSWORD=your_secure_grafana_password
LOG_LEVEL=info

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# ==============================================
# PERFORMANCE TUNING
# ==============================================
NODE_OPTIONS=--max-old-space-size=2048

# ==============================================
# FEATURE FLAGS
# ==============================================
RUN_SETUP=false
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# ==============================================
# DEVELOPMENT OVERRIDES
# ==============================================
# Uncomment these for development mode
# NODE_ENV=development
# NEXTAUTH_URL=http://localhost:3000
# TELEGRAM_WEBHOOK_URL=http://localhost:3000/api/bot/webhook
# APP_PORT=3000

# ==============================================
# DOCKER-SPECIFIC SETTINGS
# ==============================================
# These are used by docker-compose

# Container resource limits (uncomment if needed)
# POSTGRES_MAX_CONNECTIONS=100
# REDIS_MAXMEMORY=256mb
# APP_MAX_MEMORY=2g

# Timezone
TZ=Africa/Cairo

# ==============================================
# SSL/TLS CONFIGURATION (Production)
# ==============================================
# SSL_PROVIDER=letsencrypt
# SSL_STAGING=false

# ==============================================
# BACKUP ENCRYPTION (Production)
# ==============================================
# BACKUP_ENCRYPTION_PASSWORD=your_backup_encryption_password

# ==============================================
# EXTERNAL INTEGRATIONS
# ==============================================
# Add any external service configurations here
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# ANALYTICS_ID=your_analytics_id

# ==============================================
# NOTES
# ==============================================
# 1. Generate secure random passwords for production:
#    - Use: openssl rand -base64 32
#    - Or: pwgen -s 32 1
#
# 2. For NEXTAUTH_SECRET, use a long random string:
#    - openssl rand -base64 64
#
# 3. Make sure to set proper file permissions:
#    - chmod 600 .env
#
# 4. Never commit .env files to version control
#
# 5. For production, consider using Docker secrets
#    instead of environment variables for sensitive data